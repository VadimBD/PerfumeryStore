@model  Product

<div class="ProductBox">
    <img class="Image" src="@Model.Image" />
    <span>Perfume:</span>
    <a asp-controller="Product" asp-action="ProductInfo" asp-route-id="@Model.Id">@Model.Brand.Name @Model.Name</a>
    <p>Price: @Model.Price </p>
    <span>@Model.Description</span>

</div>
